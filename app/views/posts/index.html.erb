<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.post %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td > <%= button_to "edit", { :controller => 'posts',:action=> :editpost, :q_id=> post.id} %></td>
        <td > <%= button_to "delete", { :controller => 'posts',:action=> :delete, :q_id=> post.id} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
<%#= render 'posts/form'%>
<%= form_for @post,:url => { :controller => 'posts',:action => :create } do |f| %>

    <table><tr>
      <div class="field" style="size: 60cm">
        <td> <%= f.text_area :post ,cols: "80"%></td>
      </div>
      <div class="actions" >
        <td> <%= f.submit :submit%> </td>
      </div>
    </tr>
    </table>

<% end %>
